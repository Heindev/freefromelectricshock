<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffeeee"
    tools:context="com.ttu_it.freefromelectricshock.MainActivity">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="45dp"
        android:paddingTop="60dp">

        <ImageButton
            android:id="@+id/infoImgBtn"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="fitXY"
            android:src="@drawable/e2"
            android:background="@android:color/transparent"/>

        <TextView
            android:id="@+id/infoText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_below="@+id/infoImgBtn"
            android:text="လ်ွပ္​စစ္​အႏၱရယ္​"
            android:paddingTop="10dp"
            android:paddingBottom="70dp"
            android:textSize="15sp"/>


        <ImageButton
            android:id="@+id/aidImgBtn"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="fitXY"
            android:src="@drawable/aid4"
            android:background="@android:color/transparent"/>

        <TextView
            android:id="@+id/galleryText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_below="@+id/galleryImgBtn"
            android:text="ကယ္​ဆယ္​​ေရး"
            android:paddingTop="10dp"
            android:textSize="15sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="60dp"
        android:paddingTop="60dp">
        <ImageButton
            android:id="@+id/emerImgBtn"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="fitXY"
            android:src="@drawable/emergency"
            android:layout_toLeftOf="@+id/info"
            android:background="@android:color/transparent"/>
        <TextView
            android:id="@+id/phText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/emerImgBtn"
            android:text="အ​ေရး​​ေပၚ"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="70dp"
            android:textSize="15sp"/>

        <ImageButton
            android:id="@+id/tastImgBtn"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="fitXY"
            android:src="@drawable/idea1"
            android:layout_toLeftOf="@+id/info"
            android:background="@android:color/transparent"/>
        <TextView
            android:id="@+id/tastText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/aboutUsImgBtnImgBtn"
            android:text="ပ​ေဟဠိ"
            android:paddingLeft="15dp"
            android:paddingTop="10dp"
            android:textSize="15sp"/>
    </LinearLayout>

</LinearLayout>
